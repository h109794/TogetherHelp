@model List<SRV.ViewModel.KeywordModel>
<div id="sidebar-keywords" class="p-3 sidebar-border">
    <span class="pl-2">
        <i class="fa fa-tags fa-2x" aria-hidden="true"></i>
        <b class="fs-2r">关键字</b>
    </span>
    <hr />
    <div id="keywords-box">
        @foreach (var k in Model)
        {
            <a href="/article/page/1?keywordId=@k.Id" class="sidebar-keyword" keyword-id="@k.Id">@k.Text</a>
        }
    </div>
    <hr />
    <div class="input-group">
        <input id="keyword-search-box" type="text" class="form-control" placeholder="输入关键字查找">
        <div class="input-group-append">
            <button id="search-keyword" class="btn btn-outline-secondary border-right-radius"><i class="fa fa-search" aria-hidden="true"></i></button>
        </div>
        <button id="change-keywords" class="btn btn-outline-secondary ml-3"><i class="fa fa-random" aria-hidden="true"></i> 换一批</button>
    </div>
</div>

<script src="~/Scripts/shared/sidebarKeywords.js" type="text/javascript"></script>
