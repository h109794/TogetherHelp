<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/images/logo.ico" rel="shortcut icon" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Shared/userdefind.css" rel="stylesheet" />
    <style>
        a {
            color: #337ab7;
        }

        #navbarScrollingDropdown {
            color: #777
        }

        .field-validation-error {
            color: #b94a48;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar bg-light navbar-expand-sm fixed-top">
            <div class="container" style="height:40px">
                <div>
                    <a href="/"><img src="~/images/logo-big.jpg" alt="一起帮Logo" /></a>
                    <span style="font-size:18px; font-weight:600; color:#777">一起帮</span>
                    <span style="color:#777">· 网络互助平台</span>
                </div>

                <ul class="navbar-nav" style="font-size:14px;">
                    <li class="nav-item dropdown">
                        <a href="#" id="navbarScrollingDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-question-circle" aria-hidden="true"></i> 求助
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="font-size:14px">
                            <li><a class="dropdown-item" href="#"><i class="fa fa-list" aria-hidden="true"></i> 列表</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown ml-4">
                        <a href="#" id="navbarScrollingDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-eye" aria-hidden="true"></i> 督促
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="font-size:14px">
                            <li><a class="dropdown-item" href="#"><i class="fa fa-list" aria-hidden="true"></i> 我的目标</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fa fa-list" aria-hidden="true"></i> 我的督促</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown ml-4">
                        <a href="#" id="navbarScrollingDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-file-text-o" aria-hidden="true"></i> 文章
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="font-size:14px">
                            <li><a class="dropdown-item" href="~/article/page/1"><i class="fa fa-list" aria-hidden="true"></i> 列表</a></li>
                            @if (ViewData[Global.Key.HasLogin] != null)
                            {
                                <li><a class="dropdown-item" href="~/article/publish"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> 发布</a></li>
                            }
                        </ul>
                    </li>

                    @if (ViewData[Global.Key.HasLogin] != null)
                    {
                        <li class="nav-item dropdown ml-4">
                            <a class="dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-toggle="dropdown" aria-expanded="false" style="color:#337ab7">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                                @*防止因用户删除Cookie导致的异常*@
                                @if (ViewData[Global.Key.Nickname] != null)
                                {
                                    @HttpUtility.UrlDecode(ViewData[Global.Key.Nickname].ToString())
                                }
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="font-size:14px">
                                <li><a class="dropdown-item" href="~/personaldata"><i class="fa fa-camera" aria-hidden="true"></i> 个人资料</a></li>
                                <li><a class="dropdown-item" href="~/password/change"><i class="fa fa-key" aria-hidden="true"></i><span style="margin-left:5px">修改密码</span></a></li>
                                <li><a class="dropdown-item" href="~/email"><i class="fa fa-envelope" aria-hidden="true"></i><span style="margin-left:6px">绑定邮箱</span></a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="~/login/logoff"><i class="fa fa-sign-out" aria-hidden="true"></i> 退出登录</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown ml-4">
                            <a class="dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-tachometer" aria-hidden="true"></i> 后台
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="font-size:14px">
                                <li><a class="dropdown-item" href="#"><i class="fa fa-link" aria-hidden="true"></i> 联系方式</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa fa-link" aria-hidden="true"></i> 侧边栏</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown ml-4">
                            <a class="dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user-secret" aria-hidden="true"></i> 未登录
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown" style="font-size:14px">
                                <li><a class="dropdown-item" href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i><span style="margin-left:6px">登录</span></a></li>
                                <li><a class="dropdown-item" href="/register"><i class="fa fa-registered" aria-hidden="true"></i> 注册</a></li>
                                <li><a class="dropdown-item" href="/password/verify"><i class="fa fa-lock fa" aria-hidden="true" style="margin-left:2px; font-size:17px"></i><span style="margin-left:6px">忘记密码</span></a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div class="container" style="background-color:#eee; font-size:14px; height:30px; margin-top:55px">
            <i class="fa fa-calendar" aria-hidden="true" style="line-height:30px"></i>
            消息通知栏
            <a href="#" class="pull-right" style="line-height:30px">
                <i class="fa fa-hand-o-right" aria-hidden="true"></i> 全部消息
            </a>
        </div>
    </header>

    <main class="container" style="min-height:543px; padding:50px 15px 30px">
        @RenderBody()
    </main>

    <footer class="container" style="margin-bottom:50px; font-size:14px">
        <hr />
        <div>
            <a href="#">关于我们</a> |
            <a href="#">常见问题</a> |
            <a href="#">意见建议</a> |
            <a href="#">历史通知</a> |
            <a href="#" style="color:#3c763d">友情捐赠</a> |
            <a href="#">诚邀合伙人</a>
        </div>
        <div class="text-right">
            <a href="https://beian.miit.gov.cn/#/Integrated/index" target="_blank">ICP备案查询</a>
            <span class="ml-3">© @DateTime.Now.Year - SourceStack</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
