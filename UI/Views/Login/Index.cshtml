@model SRV.ViewModel.LoginModel
@{
    ViewBag.Title = "登录 - 一起帮";
    Layout = "~/Views/Shared/Layout/_UserRightLayout.cshtml";
}

@section Header{
    <i class="fa fa-sign-in" aria-hidden="true"></i> 用户登录
}

@using (Html.BeginForm())
{
    <div class="form-group">
        <label><b>用户名：</b></label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>
    <div class="form-group">
        <label><b>密码：</b></label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        <label><b>验证码：</b></label><br />
        @Html.TextBoxFor(m => m.Captcha, new { @class = "form-control align-middle d-inline w-25" })
        <img id="captcha-img" class="d-none" />
        <span>点击输入框显示</span>
        <a href="/Shared/GenerateCaptcha" id="replace-img" class="d-none">看不清楚</a>
        <br />
        @Html.ValidationMessageFor(m => m.Captcha)
    </div>

    <div>
        <button type="submit" class="btn btn-outline-primary">登录</button>
        <label class="ml-4">@Html.CheckBoxFor(m => m.RememberMe, new { @class = "align-middle" }) 记住我</label>
        <span class="float-right mt-2">
            <a href="/password/verify" class="mr-2">(｡ŏ_ŏ) 忘了</a>
            <a href="/register"><i class="fa fa-registered" aria-hidden="true"></i> 注册</a>
        </span>
    </div>
}

@section Description{
    <ul>
        <li class="mb-2">我们希望通过一起帮直接解决大家在电脑操作/软件使用/编程学习等方面的具体问题。</li>
        <li class="mb-2">随着网络技术的发展，当我们再遇到上述问题时，能直接远程给予帮助。</li>
        <li>你也可以在熟悉的领域去帮助别人，由此形成我们这个“你帮我我帮他他帮你，大家一起帮”的网上互助社区平台。</li>
    </ul>
}

<script src="~/Scripts/shared/captcha.js" type="text/javascript"></script>
