@model SRV.ViewModel.ArticleModel
@{
    Layout = "~/Views/Shared/Layout/_ContentLayout.cshtml";
    ViewBag.Title = Model.Title + " - 一起帮";
}

<div>
    <h2><i class="fa fa-book" aria-hidden="true"></i> @Model.Title</h2>
    <span class="fs-13">作者：<a href="#">@Model.AuthorName</a></span>
    <span class="float-right fs-13 clr-777"><i class="fa fa-calendar" aria-hidden="true"></i> @Model.PublishTime</span>
    <hr class="mt-0" />
</div>

<div class="fs-14">
    @Html.Raw(Model.Body)
</div>

<div class="fs-14" style="margin-top:2rem">
    <i class="fa fa-tags" aria-hidden="true"></i> <b>关键字：</b>
    @foreach (var keyword in Model.Keywords)
    {
        <span class="keyword">
            @keyword.Text
        </span>
    }
</div>

<div class="text-right fs-14">
    <a href="#" class="clr-2b542c"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 赞：@Model.Agree</a>
    <a href="#" class="ml-3 clr-777"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i> 踩：@Model.DisAgree</a>
</div>

<a name="comment-area"></a>
<div class="mt-3">
    @Html.EditorFor(m => m.Comments, "_Comments")
</div>

@section Keywords{
    @Html.Partial("_SidebarKeywords")
}
