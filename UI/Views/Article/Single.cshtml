@model SRV.ViewModel.ArticleModel
@{
    Layout = "~/Views/Shared/Layout/_ContentLayout.cshtml";
    ViewBag.Title = Model.Title + " - 一起帮";
}

<div>
    <h2><i class="fa fa-book" aria-hidden="true"></i> @Model.Title</h2>
    <span style="font-size:13px">作者：<a href="#">@Model.Author.Username</a></span>
    <span style="color:#777; font-size:13px; float:right"><i class="fa fa-calendar" aria-hidden="true"></i> @Model.PublishTime</span>
    <hr style="margin-top:0" />
</div>

<div style="font-size:14px">
    @Html.Raw(Model.Body)
</div>

<div style="font-size:14px; margin-top:2rem">
    <i class="fa fa-tags" aria-hidden="true"></i> <b>关键字：</b>
    @foreach (var keyword in Model.Keywords)
    {
        <span class="keyword">
            @keyword.Text
        </span>
    }
</div>

<div style="text-align:right; font-size:14px">
    <a href="#" style="color:#2b542c"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 赞：@Model.Agree</a>
    <a href="#" style="margin-left:1rem; color:#777"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i> 踩：@Model.DisAgree</a>
</div>

<div style="margin-top:1rem">
    @using (Html.BeginForm())
    {
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="写下你的评论……">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary">发布</button>
            </div>
        </div>
    }
</div>

@section Keywords{
    @Html.Partial("_SidebarKeywords")
}
